# Production Environment Configuration
# Copy this file to .env in your backend directory and fill in your production values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Connection String
# For MongoDB Atlas (Recommended):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/axg_production
# 
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/axg_production
MONGODB_URI=your_production_mongodb_connection_string_here

# ===========================================
# JWT AUTHENTICATION
# ===========================================

# JWT Secret Key (Generate a strong, random key)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_here

# JWT Token Expiration
JWT_EXPIRE=30d

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment
NODE_ENV=production

# Server Port
PORT=8070

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Upload directory (relative to backend root)
UPLOAD_PATH=./uploads

# Maximum file size (in bytes) - 5MB default
MAX_FILE_SIZE=5242880

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins (your domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================

# Email service for notifications
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Support email
SUPPORT_EMAIL=support@yourdomain.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Session secret for additional security
SESSION_SECRET=your_session_secret_here

# Rate limiting (requests per 15 minutes per IP)
RATE_LIMIT=100

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (optional)
LOG_FILE=./logs/app.log

# ===========================================
# BACKUP CONFIGURATION (Optional)
# ===========================================

# Backup directory
BACKUP_PATH=./backups

# Automatic backup interval (in hours)
BACKUP_INTERVAL=24

# ===========================================
# ANALYTICS (Optional)
# ===========================================

# Google Analytics ID
GA_TRACKING_ID=G-XXXXXXXXXX

# ===========================================
# PAYMENT GATEWAY (Future Use)
# ===========================================

# Stripe Keys (when implementing payments)
# STRIPE_PUBLIC_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...

# PayPal Configuration
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ===========================================
# CACHE CONFIGURATION (Optional)
# ===========================================

# Redis URL (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# Cache TTL (Time To Live in seconds)
CACHE_TTL=3600
